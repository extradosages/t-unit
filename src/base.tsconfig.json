{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "allowJs": false,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "../dist",
        "pretty": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["../src/**/*.ts"]
}
